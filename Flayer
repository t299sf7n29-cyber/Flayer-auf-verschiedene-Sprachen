  <script>
    function showVideo(lang) {
      let videoContainer = document.getElementById('video-container');
      let videoUrl = '';

      // –ò—Å–ø–æ–ª—å–∑—É–µ–º —Ñ–æ—Ä–º–∞—Ç embed –¥–ª—è YouTube
      if (lang === 'de') {
        videoUrl = 'https://www.youtube.com/embed/ZSRxk5hdvpk?rel=0&autoplay=1';
      } else if (lang === 'tr') {
        videoUrl = 'https://www.youtube.com/embed/rM9LG9QxQOo?rel=0&autoplay=1';
      } else if (lang === 'ar') {
        videoUrl = 'https://www.youtube.com/embed/aLDxfqSMQ78?rel=0&autoplay=1';
      }

      videoContainer.innerHTML = `<iframe src="${videoUrl}" allow="autoplay; fullscreen" allowfullscreen></iframe>`;
      videoContainer.style.opacity = 1;
      videoContainer.scrollIntoView({behavior: 'smooth'});
    }
  </script>

